<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <div class="containter">
    <% let i=0 %>
    <% showData.forEach((showData)=>  {  %>
    <% if ( i==0) { %>
    <div class="row">
      <div class="col" style="width: inherit;">
        <% } %>
        <p id="name">
          <%= showData.title %>
        </p>
        <picture>
          <img id="image" data-test="<%= showData.podcast %>" img loading="lazy" src="<%= showData.artwork %>" class="img-fluid img-thumbnail" width="540" alt="Show image"">
      </picture>
        <% if (i <=6) { i +=1 %>
        <% } %>
        <% if (i==2 || i==4) { %>
      </div>
      <div class=" col" style="width: inherit;">
          <% } %>
          <% if (i==6) { i=0 %>
      </div>
    </div>
    <% } %>
    <% }) %>
  </div>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
</body>

</html>